<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mag"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:textColor="@color/black"
            tools:text="@string/sample_mag"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="56dp"
            android:layout_toRightOf="@id/mag"
            android:background="@color/black"
            android:layout_toEndOf="@id/mag" />

        <TextView
            android:id="@+id/quake_at"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_toEndOf="@id/mag"
            android:layout_toRightOf="@id/mag"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            android:text="@string/quake_at"
            android:layout_toLeftOf="@id/day"
            android:layout_toStartOf="@id/day"/>

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_toEndOf="@id/mag"
            android:layout_toRightOf="@id/mag"
            android:layout_below="@id/quake_at"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            tools:text="@string/sample_place"
            android:layout_toLeftOf="@id/day"
            android:layout_toStartOf="@id/day"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="56dp"
            android:layout_toRightOf="@id/mag"
            android:background="@color/black"
            android:layout_toEndOf="@id/place" />

        <TextView
            android:id="@+id/day"
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            tools:text="@string/sample_day"/>
    </RelativeLayout>
</merge>